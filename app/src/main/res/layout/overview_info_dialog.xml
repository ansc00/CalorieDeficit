<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardCornerRadius="12dp"
    android:elevation="12dp"
   android:padding="5dp"
    android:layout_margin="5dp"


    >



<LinearLayout

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#77FFE500"
  
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        >

        <ImageView
            android:id="@+id/overviewInfoDialogIV"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="5"
            android:padding="10dp"
            android:visibility="gone"
            android:src="@drawable/ic_error_24"/>

    <TextView
        android:id="@+id/overviewInfoDialogTitleTV"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_weight="9"
        android:text="title"

        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold" />

        <ImageView
            android:id="@+id/overviewInfoDialogIV2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="5"
            android:padding="10dp"
            android:visibility="gone"
            />

</LinearLayout>

        <TextView
            android:id="@+id/overviewInfoDialogTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:gravity="center"
            android:text="abc"
            android:textColor="#000000"
            android:layout_marginTop="5dp"
            android:textSize="16sp"
            android:textStyle="bold" />




    <Button
        android:id="@+id/overviewInfoDialogOKButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="OK"
        android:layout_marginTop="15dp"
        android:background="#3BFF8D00"
        android:textStyle="bold" />


</LinearLayout>
</androidx.cardview.widget.CardView>